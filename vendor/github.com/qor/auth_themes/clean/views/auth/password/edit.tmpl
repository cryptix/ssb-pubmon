<link rel="stylesheet" media="all" href="{{.AuthURL "/assets/qor_auth.css"}}">

<div class="container qor-auth qor-auth-light">
  <div class="qor-auth-box">
    {{$flashes := .Flashes}}
    {{if $flashes}}
      <ul>
        {{range $flash := $flashes}}
          <li>{{$flash.Message}}</li>
        {{end}}
      </ul>
    {{end}}

    <h1>{{t "auth.passwords.reset_password"}}</h1>
    <form action="{{.AuthURL "password/update"}}" method="POST">
      <input type="hidden" name="reset_password_token" value="{{reset_password_token}}">

      <ul class="auth-form">
        <li>
          <label for="password">{{t "auth.form.new_password"}}</label>
          <input type="password" id="password" name="new_password" placeholder="{{ t "auth.form.new_password_placeholder" }}"/>
        </li>
        <li>
          <button type="submit" class="button button__primary">{{t "auth.form.reset_password"}}</button>
        </li>
      </ul>
    </form>
  </div>
</div>

